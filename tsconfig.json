{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules", "build"
  ],
  "include": ["src/**/*"]
}
